<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="15"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context=".Activities.ForgotPass">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/message_forgot_password"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#A2A1A0"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="2"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_forgot_sms"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:drawableStart="@drawable/logosms"
            android:background="@drawable/boderbuttonforgot"
            android:text="@string/via_sms"
            android:textAllCaps="false"
            android:paddingLeft="10dp"
            android:onClick="onClickSms"
            tools:ignore="OnClick">
        </Button>
        <Button
            android:id="@+id/btn_forgot_email"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="20dp"
            android:drawableStart="@drawable/logoletter"
            android:background="@drawable/boderbuttonforgot"
            android:text="@string/via_email"
            android:textAllCaps="false"
            android:paddingLeft="10dp"
            android:onClick="onClickEmailPhone"
            tools:ignore="OnClick">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >
        <EditText
            android:id="@+id/ed_forgot_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bordereditlogin"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:weightSum="7"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            >
        </LinearLayout>
        <Button
            android:id="@+id/btn_forgot_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="20dp"
            android:background="@drawable/boderbutton"
            android:text="@string/submit"
            android:onClick="onClickSubmit"
            tools:ignore="OnClick">
        </Button>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            >
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
