<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="15"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context=".Activities.ForgotPass">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >
        <EditText
            android:id="@+id/et_adduser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/enter_id_of_user_which_you_want_invite_into_your_tour"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#A2A1A0"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >
        <EditText
            android:id="@+id/ed_forgot_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bordereditlogin"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:weightSum="9"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
        </LinearLayout>
        <Button
            android:id="@+id/btn_adduser_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="20dp"
            android:background="@drawable/boderbutton"
            android:text="@string/add"
            android:textAllCaps="false">
        </Button>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
        </LinearLayout>
        <Button
            android:id="@+id/btn_adduser_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="20dp"
            android:background="@drawable/boderbutton"
            android:text="@string/cancel"
            android:textAllCaps="false">
        </Button>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
